{
  "manifest_version": 3,
  "name": "Cookie Cleaner",
  "version": "1.0",
  "description": "Automatically deletes cookies when you exit a tab",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 